<Window x:Class="EduCenter.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduCenter"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800"  Background="#679FD2" FontFamily="Comfortaa">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="RegisterButton_Click" BorderBrush="Black" Background="#002217" Foreground="White" Content="Зарегистрироваться" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="53" Width="204" FontSize="14" Grid.Row="1" Grid.ColumnSpan="2" Margin="298,0,0,28"/>
        <TextBox x:Name="PasswordBox" BorderBrush="Black" HorizontalAlignment="Left"    VerticalAlignment="Top" Width="204" Height="27" Grid.ColumnSpan="2" Grid.Row="1" Margin="298,68,0,0"/>
        <TextBox x:Name="LoginTextBox" BorderBrush="Black" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="204" Height="27" Grid.ColumnSpan="2" Margin="298,0,0,183" Grid.Row="1"/>
        <TextBlock  HorizontalAlignment="Center" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="120" TextAlignment="Center" FontSize="16" Margin="0,70,0,0" Grid.Row="1"/>
        <TextBlock  HorizontalAlignment="Center" Margin="0,11,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="120" TextAlignment="Center" FontSize="16" Grid.Row="1"/>
        <Label Grid.Row="0" Content="Регистрация" HorizontalAlignment="Left" Margin="210,0,0,133" VerticalAlignment="Bottom" Width="380" HorizontalContentAlignment="Center" FontSize="48" Grid.ColumnSpan="2"/>
        <TextBox x:Name="FullNameTextBox" BorderBrush="Black" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="204" Height="27" Grid.ColumnSpan="2" Margin="298,0,0,0"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="ФИО" VerticalAlignment="Center" Width="120" TextAlignment="Center" FontSize="16"/>
        <ComboBox x:Name="GenderComboBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="204" Margin="298,147,0,0" Height="30">
            <ComboBoxItem>Логист</ComboBoxItem>
            <ComboBoxItem>Менеджер</ComboBoxItem>
            <ComboBoxItem>Бухгалтер</ComboBoxItem>
            <ComboBoxItem>Дизайнер</ComboBoxItem>
            <ComboBoxItem>Копирайтер</ComboBoxItem>


        </ComboBox>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Должность" VerticalAlignment="Top" Width="120" TextAlignment="Center" FontSize="16" Margin="0,151,0,0"/>
        <Button  BorderBrush="Black" Background="#002217" Foreground="White" Content="Генерация пароля" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="53" Width="204" FontSize="14" Grid.Row="1" Margin="186,0,0,28" Grid.Column="1" Click="Button_Click"/>

    </Grid>
</Window>
