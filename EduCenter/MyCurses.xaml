<Window x:Class="EduCenter.MyCurses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мои Курсы" Height="400" Width="600" Background="#00ffc5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ваши записанные курсы" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" />

        <ListBox x:Name="UserCoursesListBox" Grid.Row="1" Margin="10">
           
        </ListBox>

        <Button BorderBrush="Black" Background="#002217" Foreground="White" Content="Закрыть" Grid.Row="2" Margin="10" HorizontalAlignment="Right" Click="CloseButton_Click"/>
    </Grid>
</Window>
