<Window x:Class="EduCenter.MenuCurses"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Меню Курсов" Height="550" Width="525" Background="#00ffc5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="524*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="CoursesListBox" Margin="10,20,110,10"  />
        <Button BorderBrush="Black" Background="#002217" Foreground="White" Content="Записаться" HorizontalAlignment="Right" VerticalAlignment="Top" Click="EnrollButton_Click"  Margin="0,74,9,0" Height="33" Width="96" FontSize="16"/>
        <Button BorderBrush="Black" Background="#002217" Foreground="White" Content="Подробнее" HorizontalAlignment="Right" VerticalAlignment="Top" Click="DetailsButton_Click" Margin="0,136,9,0" Height="33" Width="96" FontSize="16"/>
        <Button BorderBrush="Black" Background="#002217" Foreground="White" Content="Мои курсы" HorizontalAlignment="Right" VerticalAlignment="Top" Click="MyCoursesButton_Click" Margin="0,477,9,0" Height="33" Width="96" FontSize="16"/>
    </Grid>
</Window> 
